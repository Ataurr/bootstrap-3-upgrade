<script>
    $(document).ready(function() {
        $('#btnConvert').click(function(){
        
            $.getScript("/carbon.js"); // ads

            // regex opts
            var options = {
                "indent_with_tabs": true,
                "preserve_newlines": true
            }
        
            $('#target').val("");
            $.ajax({
                url: "/",
                type: "post",
                data: $('#formBootstrap').serializeObject(),
                success: function (data) {
                    if (typeof data.error!="undefined") {
                        alert(data.error);
                    } else {
                        var converted = style_html(data.result).replace(/-\s->/g,"-->",options);
                        
                        $('#target').val(converted);
                        $('html, body').animate({
                            scrollTop: $("#bs3").offset().top
                        }, 1000);
                    }
                },
                error: function (e) {
                    console.log('error:'+e);
                }
            });
        });
        
        $('#btnPreview').click(function(){
        
            var htm = $('#target').val();
            
            var newForm = $('<form>', {
                'action': 'http://www.bootply.com/new',
                'method': 'POST',
                'target': 'full'
                }).append($('<input>', {
                    'name': 'target',
                    'value': htm,
                    'type': 'hidden'
                }));
                
            newForm.hide();
            newForm.appendTo('body');
            window.open('','full','width=1240,height=650,status=0');
            newForm.submit();
            newForm.remove();
            
            return false;
        });
        
    });
    
    $.fn.serializeObject = function()
    {
            var o = {};
            var a = this.serializeArray();
            $.each(a, function() {
                if (o[this.name] !== undefined) {
                    if (!o[this.name].push) {
                        o[this.name] = [o[this.name]];
                    }
                    o[this.name].push(this.value || '');
                } else {
                    o[this.name] = this.value || '';
                }
            });
            return o;
    };
</script>

